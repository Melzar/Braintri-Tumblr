<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="vm"
            type="com.matuszew.braintri_tumblr.posts.details.PostDetailsContract.ViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/heading_layout"
            style="@style/LinearLayout.Header.Orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_heading"
                style="@style/TextView.Header.Light"
                htmlText="@{vm.model.photoCaption}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollHorizontally="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextView.SubHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{vm.model.date}" />
        </LinearLayout>


        <ImageView
            android:id="@+id/tv_subheading"
            imageFromUrl="@{vm.model.photoUrl1280}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />
    </LinearLayout>
</layout>