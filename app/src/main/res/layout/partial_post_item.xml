<?xml version="1.0" encoding="utf-8"?>
<layout >
    <data>
        <variable
            name="vm"
            type="com.matuszew.braintri_tumblr.posts.list.adapter.PostViewModel"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="@{() -> vm.itemClicked()}">
        <android.support.v7.widget.CardView
            style="@style/CustomCardView.PostCardView"
            android:id="@+id/post_item_card"
            android:layout_width="match_parent"
            app:cardPreventCornerOverlap="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    style="@style/CustomCardView.Header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{vm.model.id}" />
                <TextView
                    style="@style/CustomCardView.SubHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{vm.model.type}"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{vm.model.date}"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{vm.model.url}"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>