<?xml version="1.0" encoding="utf-8"?>
<layout >
    <data>
        <variable
            name="vm"
            type="com.matuszew.braintri_tumblr.posts.list.adapter.PostViewModel"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="@{() -> vm.itemClicked()}">
        <android.support.v7.widget.CardView
            style="@style/CustomCardView.PostCardView"
            android:id="@+id/post_item_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/card_view_elevation"
            app:cardPreventCornerOverlap="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    style="@style/CustomCardView.Header"
                    android:id="@+id/post_item_card_header"
                    android:layout_width="match_parent"
                    android:background="@{vm.headerBackground}">
                    <ImageView
                        style="@style/ImageView.HeaderImage"
                        android:id="@+id/post_type_icon"
                        android:src="@{vm.icon}"/>
                    <TextView
                        style="@style/TextView.HeaderDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:text="@{vm.date}"/>
                </RelativeLayout>
                <LinearLayout
                    style="@style/LinearLayout.PostFooter"
                    android:id="@+id/post_item_card_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/post_item_card_tags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        postTags="@{vm.model.tags}">
                    </LinearLayout>
                    <TextView
                        style="@style/TextView.FooterNotes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@{vm.notes}"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>