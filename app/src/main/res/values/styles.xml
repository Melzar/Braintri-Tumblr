<resources>


    <!-- General styles -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Themes -->

    <style name="EditText.DarkBackgroundTheme">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="textColorError">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Activity styles -->

    <style name="Activity"></style>

    <style name="Activity.BackgroundDark">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="Activity.BackgroundBeige">
        <item name="android:background">@color/colorBeige</item>
    </style>

    <!-- CardView styles -->

    <style name="CustomCardView"></style>

    <style name="CustomCardView.PostCardView">
        <item name="android:layout_height">@dimen/post_list_item_height</item>
        <item name="android:layout_marginTop">@dimen/post_list_item_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/post_list_item_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="contentPaddingLeft">@dimen/activity_vertical_margin</item>
        <item name="contentPaddingRight">@dimen/activity_vertical_margin</item>
        <item name="contentPaddingTop">@dimen/activity_horizontal_margin</item>
        <item name="contentPaddingBottom">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="CustomCardView.Header">
        <item name="android:textSize">@dimen/font_xl</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomCardView.SubHeader" parent="CustomCardView.Header">
        <item name="android:textSize">@dimen/font_lg</item>
    </style>

    <!-- LinearLayout styles -->

    <style name="LinearLayout"></style>

    <style name="LinearLayout.Header">
        <item name="android:padding">@dimen/space_xxl</item>
    </style>

    <style name="LinearLayout.Header.Green">
        <item name="android:background">@color/colorGreen</item>
    </style>

    <style name="LinearLayout.Header.Violet">
        <item name="android:background">@color/colorViolet</item>
    </style>

    <style name="LinearLayout.Header.Orange">
        <item name="android:background">@color/colorOrange</item>
    </style>

    <style name="LinearLayout.Header.DarkBlue">
        <item name="android:background">@color/colorDarkBlue</item>
    </style>

    <style name="LinearLayout.Header.LightRed">
        <item name="android:background">@color/colorLightRed</item>
    </style>

    <!-- TextView styles -->
    <style name="TextView"></style>

    <style name="TextView.Content">
        <item name="android:paddingLeft">@dimen/space_xxl</item>
        <item name="android:paddingRight">@dimen/space_xxl</item>
        <item name="android:paddingBottom">@dimen/space_xxl</item>
        <item name="android:layout_marginTop">@dimen/space_xl</item>
    </style>

    <style name="TextView.Header">
        <item name="android:textSize">@dimen/font_xxl</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Header.Light">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView.SubHeader">
        <item name="android:padding">@dimen/space_md</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- EditText styles -->

    <style name="EditText">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EditText.DarkBackground">
        <item name="android:theme">@style/EditText.DarkBackgroundTheme</item>
    </style>

    <style name="EditText.DarkBackground.Large">
        <item name="android:textSize">@dimen/font_lg</item>
    </style>

    <!-- Button styles -->

    <style name="Button"></style>

    <style name="Button.Blue">
        <item name="android:background">@drawable/drawable_rounded_blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <!-- Login Screen styles -->

    <style name="Login"></style>

    <style name="Login.Logo">
        <item name="android:background">@drawable/tumblr</item>
        <item name="android:layout_marginBottom">@dimen/space_xxl</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="Login.SubmitButton">
        <item name="android:theme">@style/Button.Blue</item>
        <item name="android:background">@drawable/drawable_rounded_blue</item>
        <item name="android:layout_marginTop">@dimen/space_lg</item>
        <item name="android:layout_marginLeft">@dimen/space_xxxxl</item>
        <item name="android:layout_marginRight">@dimen/space_xxxxl</item>
    </style>

</resources>
